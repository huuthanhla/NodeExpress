extends ../layouts/common
block content
	h1 
		span.mr-3 Users
		a.btn.btn-success(href="/users/create", class="ml-2") New

	.d-flex.align-items-center
		form.ml-auto(action="/users/search", method="GET" class="d-flex")
			input(type="text", class="form-control ml-2", name="q" value=query ? query : '')
			button(class="btn btn-primary ml-2") Search

	table.table
		tr
			th Avatar
			th Name
			th Phone
			th Actions
		each user in users
			tr
				td
					img(src=user.avatar width="50")
				td= user.name
				td= user.phone
				td
					a.btn.btn-info.mr-2(href='/users/' + user._id) View