extends ../layouts/common
block content
    h1 Users

    a(href="/users/create", class="ml-2") New User
    form(action="/users/search", method="GET" class="d-flex")
        input(type="text", class="form-control ml-2", name="q" value=`${query}`)
        button(class="btn btn-primary ml-2 mr-2") Search
    ul
        each user in users
            li
                span= user.name
                span &nbsp;
                a(href='/users/' + user.id) View